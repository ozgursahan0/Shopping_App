<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="334dp"
        android:layout_height="43dp"
        android:background="#C80E0E"
        android:text="*****ABC ELEKTRONIK*****"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.695" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="331dp"
        android:layout_height="43dp"
        android:layout_marginBottom="52dp"
        android:backgroundTint="#AF1414"
        android:text="----------HOSGELDINIZ----------"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="334dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:allowUndo="false"
        android:background="@drawable/buttonshape"
        android:backgroundTint="#9E0606"
        android:onClick="fiyat"
        android:shadowColor="@color/teal_200"
        android:text="Ürün ve Fiyat Sorgula"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#DFDFDF" />


    <Button
        android:id="@+id/button4"
        android:layout_width="334dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="#AC1E1E"
        android:onClick="siparis"
        android:text="Siparişi Tamamla"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_width="331dp"
        android:layout_height="48dp"
        android:layout_marginBottom="204dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="#DA0000"
        android:onClick="son"
        android:text="Sonlandır"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>